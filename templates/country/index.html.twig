{% extends 'base.html.twig' %}

{% block title %}Country index{% endblock %}

{% block body %}
    <div class="container col-md-10 mt-5" style="margin: auto">
        <h1 class="mb-2">Country index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for country in countries %}
                <tr>
                    <td>{{ country.id }}</td>
                    <td>{{ country.title }}</td>
                    <td>
                        <a class="classic-btn-second" href="{{ path('app_country_show', {'id': country.id}) }}">show</a>
                        <a class="classic-btn" href="{{ path('app_country_edit', {'id': country.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_country_new') }}" class="classic-btn">Create new</a>
    </div>
{% endblock %}
