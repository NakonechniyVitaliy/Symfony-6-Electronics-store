{% extends 'base.html.twig' %}


{% block body %}
    <div class="container col-md-3 m-auto mt-5">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            <input class="form" type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
            <label for="username">Email:</label>
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required>

            <label for="password" class="mt-3">Password:</label>
            <input type="password" class="form-control" id="password" name="_password" required>

            {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

            <button type="submit" class="classic-btn mt-3">login</button>
        </form>
    </div>
{% endblock %}