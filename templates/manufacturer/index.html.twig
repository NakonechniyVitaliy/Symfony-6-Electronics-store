{% extends 'base.html.twig' %}

{% block title %}Manufacturer index{% endblock %}

{% block body %}
    <div class="container">
        {{ form_start(searchForm) }}
        {{ form_widget(searchForm) }}
        <button class="btn btn-info">{{ button_label|default('Find') }}</button>
        {{ form_end(searchForm) }}
    </div>

    <div class="container col-md-12 mt-5 mb-5">
        <h1>Manufacturer index</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Country</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for manufacturer in manufacturers %}
                <tr>
                    <td>{{ manufacturer.id }}</td>
                    <td>{{ manufacturer.title }}</td>
                    <td>{{ manufacturer.country }}</td>
                    <td>
                        <a href="{{ path('app_manufacturer_show', {'id': manufacturer.id}) }}">show</a>
                        <a href="{{ path('app_manufacturer_edit', {'id': manufacturer.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_manufacturer_new') }}" class="btn btn-success">Create new</a>
    </div>
{% endblock %}
